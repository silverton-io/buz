{
  "$schema": "https://registry.buz.dev/s/io.silverton/buz/internal/meta/v1.0.json",
  "$id": "io.silverton/buz/internal/meta/v1.0.json",
  "description": "The Buz Metaschema",
  "self": {
    "vendor": "buz",
    "namespace": "internal.meta",
    "version": "1.0",
    "format": "json"
  },
  "privacy": {},
  "owner": {
    "org": "silverton",
    "team": "buz",
    "individual": "jakthom"
  },
  "allOf": [
    {
      "$ref": "https://json-schema.org/draft/2020-12/schema"
    },
    {
      "properties": {
        "self": {
          "type": "object",
          "properties": {
            "vendor": {
              "type": "string",
              "description": "The schema vendor"
            },
            "namespace": {
              "type": "string",
              "description": "The schema namespace"
            },
            "version": {
              "type": "string",
              "description": "The schema version"
            },
            "format": {
              "type": "string",
              "description": "The event schema format",
              "default": "jsonschema",
              "enum": ["jsonschema", "jsontypedef"]
            }
          },
          "required": ["vendor", "namespace", "version"],
          "additionalProperties": false
        },
        "privacy": {
          "type": "object",
          "properties": {
            "isPii": {
              "type": "array",
              "description": "A list of schema fields that should be considered PII",
              "items": {
                "type": "string"
              }
            },
            "anonymize": {
              "type": "array",
              "description": "A list of schema fields to anonymize",
              "items": {
                "type": "string"
              }
            },
            "tokenize": {
              "type": "array",
              "description": "A list of schema fields to tokenize",
              "items": {
                "type": "string"
              }
            },
            "controller": {
              "type": "string",
              "description": "The controller name"
            },
            "subject": {
              "type": "string",
              "description": "The subject"
            }
          },
          "required": [],
          "additionalProperties": false
        },
        "owner": {
          "type": "object",
          "properties": {
            "org": {
              "type": "string",
              "description": "The event org owner"
            },
            "team": {
              "type": "string",
              "description": "The event team owner"
            },
            "individual": {
              "type": "string",
              "description": "The event individual owner"
            }
          },
          "anyOf": [
            {
              "required": ["org"]
            },
            {
              "required": ["team"]
            },
            {
              "required": ["individual"]
            }
          ]
        },
        "metrics": {
          "type": "object",
          "properties": {
            "measures": {
              "type": "array",
              "description": "A list of event properties to be considered measures",
              "items": {
                "type": "string"
              }
            },
            "dimensions": {
              "type": "array",
              "description": "A list of event properties to be considered dimensions",
              "items": {
                "type": "string"
              }
            }
          }
        },
        "disableValidation": {
          "type": "boolean",
          "description": "A meta property that disables validation",
          "default": "false"
        }
      },
      "required": ["owner", "self"]
    }
  ]
}
