                },
                "error": {
                    "type": "object",
                    "description": "Validation error and corresponding details",
                    "properties": {
                        "errorType": {
                            "type": "string",
                            "description": "The type of payload validation error"
                        },
                        "errorResolution": {
                            "type": "string",
                            "description": "A hint indicating how to resolve the validation error"
                        },
                        "errors": {
                            "type": "array",
                            "description": "Validation errors",
                            "items": {
                                "type": "object",
                                "description": "Errors",
                                "properties": {
                                    "field": {
                                        "type": "string",
