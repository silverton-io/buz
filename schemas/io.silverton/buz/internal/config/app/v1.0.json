                    "hosts": {
                        "type": "array",
                        "description": "The database hostname(s)",
                        "default": [
                            "localhost"
                        ]
                    },
                    "port": {
                        "type": "number",
                        "description": "The database port",
                        "default": 5432
                    },
                    "database": {
                        "type": "string",
                        "description": "The database name",
                        "default": "buz"
                    },
                    "user": {
                        "type": "string",
                        "description": "The database connection user",
