                        "required": []
                    },
                    {
                        "properties": {
                            "type": {
                                "const": "kinesis-firehose"
                            }
                        },
                        "required": []
                    },
                    {
                        "properties": {
                            "type": {
                                "const": "http"
                            }
                        },
                        "required": [
                            "url"
                        ]
                    },
                    {
                        "properties": {
                            "type": {
                                "const": "https"
                            }
                        },
                        "required": [
                            "url"
                        ]
                    },
