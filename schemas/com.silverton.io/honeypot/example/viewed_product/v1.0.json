{
	"$schema": "https://json-schema.org/draft/2020-12/schema",
    "$id": "https://registry.silverton.io/com.silverton.io/honeypot/example/viewed_product/v1.0.json",
    "title": "com.silverton.io/honeypot/example/viewed_product/v1.0.json",
	"description": "Schema for viewing a product",
	"self": {
		"vendor": "com.silverton.io",
        "primaryNamespace": "honeypot",
        "secondaryNamespace": "example",
		"name": "viewed_product",
		"format": "jsonschema",
		"version": "1.0"
	},
	"type": "object",
	"properties": {
		"productId": {
			"description": "The product id",
			"type": "string",
			"minLength": 0,
			"maxLength": 4096
		},
        "category": {
            "description": "The category",
            "type": "string"
        },
        "brand": {
            "description": "The brand",
            "type": "string"
        },
        "returning": {
            "description": "Whether or not the customer is a return visit",
            "type": "boolean"
        },
        "price": {
            "description": "The price of the product viewed",
            "type": "number"
        },
        "sizes": {
            "description": "The available sizes",
            "type": "array",
            "items": {
                "type": "string"
            }
        },
        "availableSince": {
            "description": "The availability date of the product",
            "type": "string",
            "format": "date-time"
        }
	},
	"required": ["productId", "category", "brand", "returning", "price", "sizes", "availableSince"],
	"additionalProperties": false
}